<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab3_knowledge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="ความรู้ข้อเข่าเสื่อม"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="สาระการผ่าตัด :"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_import_contacts_pink_24dp" />

            <Button
                android:id="@+id/btn_knowledge1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="เตรียมตัวอย่างไรก่อนวันผ่าตัด ?"
                android:gravity="left"
                android:textSize="17sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_import_contacts_pink_24dp" />

            <Button
                android:id="@+id/btn_knowledge2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ในวันผ่าตัดต้องทำอะไรบ้าง ?"
                android:gravity="left"
                android:textSize="17sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_import_contacts_pink_24dp" />

            <Button
                android:id="@+id/btn_knowledge3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="หลังผ่าตัด 24 ชั่วโมงแรก ?"
                android:gravity="left"
                android:textSize="17sp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
