<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ในวันผ่าตัดต้องทำอะไรบ้าง ?"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ในวันผ่าตัดคนไข้จะได้รับการวางยาสลบหรือฉีดยาชาที่บริเวณหลัง ซึ่งจะใช้วิธีไหนขึ้นอยู่กับความเหมาะสมสำหรับผู้ป่วยแต่ละรายและลักษณะของการผ่าตัด ซึ่งวิสัญญีแพทย์จะเป็ผู้ประเมิน เมื่อเริ่มผ่าตัดศัลยแพทย์จะรัดสายรัดที่บริเวณต้นขาของคนไข้เพื่อห้ามไม่ให้เลือดออกในระหว่างผ่าตัด และให้ยาป้องกีนการติดเชื้อแก่คนไข้"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:gravity="left"/>

    </LinearLayout>
</ScrollView>