<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="ระยะที่ 1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/font_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันที่"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เวลา"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stepTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ท่าที่ 1 กระ-ดก-เท้า "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noteTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="หมายเหตุ ท่าที่ 1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stepTxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ท่าที่ 2 หงาย-ชิด-ก้น"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noteTxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="หมายเหตุ ท่าที่ 2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stepTxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ท่าที่ 3 ก้ม-แตะ-เท้า"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noteTxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="หมายเหตุ ท่าที่ 3"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</ScrollView>